<div class="container" style="margin-top: 100px; margin-bottom: 30px;">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <!-- SideBar -->
      <%= render 'public/shared/customer_profile', user: current_customer %>
    </div>
    <div class="col-md-9">
        <!-- Control links -->
        <%= render 'public/shared/controll' %>
      <h1 class="display-9 mb-4">食事投稿一覧</h1>
      <div class="section1 text-right">
        <%= link_to "トレーニング投稿一覧", training_posts_path, class: "btn btn-primary btn-sm" %>
      </div>
      <ul class="list-group">
        <% @meal_post_all.each do |meal_post| %>
          <li class="list-group-item">
            <div class="d-flex w-100 justify-content-between align-items-center">
              <h5 class="mb-1"><strong><%= meal_post.customer.name %></strong></h5>
              <small>(<%= meal_post.date.strftime("%Y-%m-%d") %>)</small>
            </div>
            <p class="mb-1"><%= link_to meal_post.title, meal_post_path(meal_post) %></p>
            <td><%= render "public/meal_favs/btn", meal_post: meal_post %></td>
            <td>コメント数： <%= meal_post.meal_comments.count %></td>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>