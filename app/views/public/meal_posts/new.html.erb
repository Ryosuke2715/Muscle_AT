<div class="container" style="margin-top: 100px; margin-bottom: 173px;">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <!-- Control links -->
      <%= render 'public/shared/controll' %>
    </div>
    <div class="col-md-3">
      <!-- SideBar -->
      <%= render 'public/shared/customer_profile', user: current_customer %>
    </div>
    <div class="col-md-6">
      <div class="section1 text-right">
        <%= link_to "トレーニング投稿", new_training_post_path, class: "btn btn-primary btn-sm" %>
      </div>
      <%= form_with(model: @meal_post, local: true) do |form| %>
        <div class="form-group row">
          <div class="col-md-3">
            <%= form.label :date %>
            <%= form.date_field :date, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :content %>
          <%= form.text_area :content, class: "form-control" %>
        </div>
        <div class="actions">
          <%= form.submit "Create Meal Post", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>