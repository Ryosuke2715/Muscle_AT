<div class="container" style="margin-top: 130px; margin-bottom: 173px;">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <!-- Control links -->
      <%= render 'public/shared/controll' %>
    </div>
    <div class="col-md-3">
      <!-- SideBar -->
      <%= render 'public/shared/customer_profile', user: current_customer %>
    </div>
    <div class="col-md-9">
      <%= form_with(model: @training_post, local: true) do |form| %>
        <div class="form-group row">
          <div class="col-md-3">
            <%= form.label :date %>
            <%= form.date_field :date, class: "form-control" %>
          </div>
          <div class="col-md-6">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
        </div>
        <div class="form-group">
          <%= form.label :content %>
          <%= form.text_area :content, class: "form-control" %>
        </div>
        <div class="actions">
          <%= form.submit "Create Training Post", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>