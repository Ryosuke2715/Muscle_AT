<div class="container" style="margin-top: 100px; margin-bottom: 30px;">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <!-- SideBar -->
      <%= render 'public/shared/customer_profile', customer: current_customer %>
    </div>
    <div class="col-md-9">
      <!-- Control links -->
      <%= render 'public/shared/controll' %>
      <h2>トレーニング投稿</h2>
    <div class="section1 text-right">
      <%= link_to "食事投稿へ移動", new_meal_post_path, class: "btn btn-primary btn-sm" %>
    </div>
      <%= form_with(model: @training_post, local: true) do |form| %>
        <div class="form-group row">
          <div class="col-md-3">
            <%= form.label :date %>
            <%= form.date_field :date, class: "form-control" %>
          </div>
          <div class="col-md-3">
            <%= form.label :title %>
            <%= form.text_field :title, class: "form-control" %>
          </div>
        </div>
          <div class="form-inline">
            <div class="form_group">
                <%= form.collection_select(:training_tag_id,@training_tags,:id, :training_tag) %>
            </div>
            <!-- 重量（kg）入力フォーム -->
            <div class="form-group">
              <input type="text" class="form-control-sm" id="kg" name="kg">
              <label for="kg">kg</label>
            </div>

            <!-- レップ入力フォーム -->
            <div class="form-group">
              <input type="text" class="form-control-sm" id="rep" name="rep">
              <label for="reps">ﾚｯﾌﾟ</label>
            </div>

            <!-- セット数入力フォーム -->
            <div class="form-group">
              <input type="text" class="form-control-sm" id="set" name="set">
              <label for="set">ｾｯﾄ</label>
            </div>
          </div>
          <div id='tasks'>
            <%= form.fields_for :training_tags do |training_tag| %>
             <%= render 'training_tag_fields', :f => training_tag %>
            <% end %>
            <div class='links'>
              <%= link_to_add_association 'add training_tag', form, :training_tags %>
            </div>
          </div>
        <div class="form-group">
          <%= form.label :content %>
          <%= form.text_area :content, class: "form-control" %>
        </div>
        <div class="actions">
          <%= form.submit "投稿", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
