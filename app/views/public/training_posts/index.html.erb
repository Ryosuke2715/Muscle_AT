<div class="container" style="margin-top: 100px; margin-bottom: 30px;">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <!-- SideBar -->
      <%= render 'public/shared/customer_profile', customer: @customer %>
    </div>

    <div class="col-md-9">
      <!-- Control links -->
      <%= render 'public/shared/controll' %>
      <h1 class="display-9 mb-4">トレーニング投稿一覧</h1>
      <div class="section1 text-right">
        <%= link_to "食事投稿一覧", meal_posts_path, class: "btn btn-primary btn-sm" %>
      </div>
      <ul class="list-group">
        <% @training_post_all.each do |training_post| %>
          <li class="list-group-item">
            <div class="d-flex w-100 justify-content-between align-items-center">
              <h5 class="mb-1"><strong><%= training_post.customer.name %></strong></h5>
              <small>(<%= training_post.date.strftime("%Y-%m-%d") %>)</small>
            </div>
            <p class="mb-1"><%= link_to training_post.title, public_training_post_path(training_post) %></p>
            <td><%= render "public/training_favs/btn", training_post: training_post %></td>
            <td>コメント数： <%= training_post.training_comments.count %></td>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>