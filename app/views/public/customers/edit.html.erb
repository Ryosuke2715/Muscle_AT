<div class="container" style="margin-top: 130px; margin-bottom: 173px;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_for @customer, url: customer_path, method: :patch, html: { class: "form-signin" } do |f| %>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :profile_message %>
          <%= f.text_area :profile_message, class: "form-control" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>