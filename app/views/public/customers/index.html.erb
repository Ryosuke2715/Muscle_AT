<div class="container" style="margin-top: 100px; margin-bottom: 30px;">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <!-- SideBar -->
      <%= render 'public/shared/customer_profile', customer: current_customer %>
    </div>
    <div class="col-md-9">
      <!-- Control links -->
      <%= render 'public/shared/controll' %>
      <div class="col-md-9">
        <h1 class="text-center">会員一覧</h1>
        <ul class="list-group">
          <% @customers.each do |customer| %>
            <li class="list-group-item">
              <%= link_to customer.name, customer, class: "btn btn-link" %>
              <%= "フォロー:#{customer.followings.count}" %>
              <%= "フォロワー:#{customer.followers.count}" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
