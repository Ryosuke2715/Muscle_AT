<% if training_post.favorited_by?(current_customer) %>
  <%= link_to training_post_training_fav_path(training_post), method: :delete do %>
    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
    <%= training_post.training_fav.count %> いいね
  <% end %>
<% else %>
  <%= link_to training_post_training_fav_path(training_post), method: :post do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= training_post.training_fav.count %> いいね
  <% end %>
<% end %>