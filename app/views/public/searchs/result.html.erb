<div class="container" style="margin-top: 100px; margin-bottom: 30px;">
  <div class="row justify-content-center">
    <div class="col-md-3">
      <!-- SideBar -->
      <%= render 'public/shared/customer_profile', customer: current_customer %>
    </div>
    <div class="col-md-9">
      <!-- Control links -->
      <%= render 'public/shared/controll' %>
      <div class="container">
        TrainingPost <%= @result %> の検索結果
        <% @item_training.each do |item| %>
          <div>
            会員名: <%= item.customer.name %>
            タイトル: <%= link_to item.title , training_post_path(item) %>
          </div>
        <% end %>
        MealPost <%= @result %> の検索結果
        <% @item_meal.each do |item| %>
          <div>
            会員名: <%= item.customer.name %>
            タイトル: <%= link_to item.title , meal_post_path(item) %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

