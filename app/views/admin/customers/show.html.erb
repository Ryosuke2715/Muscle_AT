<div class="container" style="margin-top: 130px; margin-bottom: 30px;">
  <%= render 'admin/shared/controll' %>
  <p><strong>Name:</strong> <%= @customer.name %></p>
  <p><strong>Email:</strong> <%= @customer.email %></p>

  <%= link_to 'Back', admin_customers_path %> <!-- 一覧ページへのリンク -->
  <%= link_to 'Delete', admin_customer_path(@customer), method: :delete, data: { confirm: 'Are you sure?' } %>

  <h2>Training Posts</h2>
  <ul>
    <% @customer.training_posts.each do |post| %>
      <li>
        <strong>Date:</strong> <%= post.date.strftime("%Y-%m-%d") %>
        <strong>Title:</strong> <%= link_to post.title, admin_training_post_path(post) %>
        <!-- 他の投稿情報を表示 -->
      </li>
    <% end %>
  </ul>

  <h2>Meal Posts</h2>
  <ul>
    <% @customer.meal_posts.each do |post| %>
      <li>
        <strong>Date:</strong> <%= post.date.strftime("%Y-%m-%d") %>
        <strong>Title:</strong> <%= link_to post.title, admin_meal_post_path(post) %>
        <!-- 他の投稿情報を表示 -->
      </li>
    <% end %>
  </ul>
</div>