<div class="container" style="margin-top: 130px; margin-bottom: 30px;">
  <%= render 'admin/shared/controll' %>
  <div class="col-md-7">
    <h3>トレーニングタグ</h3>
    <% @training_tags.each do |value| %>
      <p>
        <%= value.training_tag %>
        <%= link_to "削除", training_tag_path(value), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
      </p>
    <% end %>
  </div>
  <div class="col-md-5">
      <%= form_with(model: @training_tag, local: true) do |form| %>
        <div class="form-group row">
          <div class="col-md-3">
            <%= form.label :training_tag %>
            <%= form.text_field :training_tag, :size=>"40" %>
          </div>
        </div>
        <div class="actions">
          <%= form.submit "投稿", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
</div>