<div class="container" style="margin-top: 130px; margin-bottom: 30px;">
  <%= render 'admin/shared/controll' %>
  <h1 class="display-9 mb-4">トレーニング投稿一覧</h1>
  <div class="section1 text-right">
    <%= link_to "食事投稿一覧", admin_meal_posts_path, class: "btn btn-primary btn-sm" %>
  </div>
  <ul class="list-group">
    <% @training_posts.each do |training_post| %>
      <li class="list-group-item">
        <div class="d-flex w-100 justify-content-between align-items-center">
          <h5 class="mb-1"><strong><%= training_post.customer.name %></strong></h5>
          <small>(<%= training_post.date.strftime("%Y-%m-%d") %>)</small>
        </div>
        <td class="mb-1"><%= link_to training_post.title, admin_training_post_path(training_post) %></td>
        <td>コメント数： <%= training_post.training_comments.count %></td>
      </li>
    <% end %>
  </ul>
</div>