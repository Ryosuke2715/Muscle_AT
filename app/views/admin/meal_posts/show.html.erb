<div class="container" style="margin-top: 130px; margin-bottom: 30px;">
  <%= render 'admin/shared/controll' %>
  <p><strong>Title:</strong> <%= @meal_post.title %></p>
  <p><strong>Date:</strong> <%= @meal_post.date.strftime("%Y-%m-%d") %></p>
  <p><strong>Content:</strong></p>
  <p><%= @meal_post.content %></p>
  
  <%= link_to 'Back', admin_meal_posts_path %> <!-- 一覧ページへのリンク -->
  <%= link_to 'Delete', admin_meal_post_path(@meal_post), method: :delete, data: { confirm: 'Are you sure?' } %> <!-- 削除リンク -->
</div>