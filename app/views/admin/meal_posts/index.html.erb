<div class="container" style="margin-top: 130px; margin-bottom: 30px;">
  <%= render 'admin/shared/controll' %>
  <h1 class="display-9 mb-4">食事投稿一覧</h1>
  <div class="section1 text-right">
        <%= link_to "トレーニング投稿一覧", admin_training_posts_path, class: "btn btn-primary btn-sm" %>
      </div>
  <ul class="list-group">
    <% @meal_posts.each do |meal_post| %>
      <li class="list-group-item">
        <div class="d-flex w-100 justify-content-between align-items-center">
          <h5 class="mb-1"><strong><%= meal_post.customer.name %></strong></h5>
          <small>(<%= meal_post.date.strftime("%Y-%m-%d") %>)</small>
        </div>
        <p class="mb-1"><%= link_to meal_post.title, admin_meal_post_path(meal_post) %></p>
      </li>
    <% end %>
  </ul>
</div>